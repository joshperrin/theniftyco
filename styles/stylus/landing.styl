html, body
	width 100%
	max-width 100%
	height 100%
	margin 0
	text-align center

ul
	padding 0

a
	color $blue

img
	max-width 100%

.nifty-wordmark
	display none
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	@media (max-width: 550px)
		position static
		transform none
		width 95%
		margin 40% auto 0 auto

.background
	background url("../../img/nifty-background.jpg") center center
	background-size cover

.background-overlay
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	opacity 0.9
	background-color $white

.menu-icon
	position fixed
	top 7px
	right 0
	width 45px
	height 45px
	z-index 20000
	cursor pointer
	&:hover
		.menu-bar
			background-color lighten($grey, 30%)
	&.close-menu
		.x-first
			transform rotate(44deg) translate(6px, 7px)
		.x-hide
			opacity 0
		.x-last
			transform rotate(-44deg) translate(5px, -7px)

.menu-bar
	width 27px
	height 4px
	margin 5px auto
	background-color $darkgrey
	transition all 0.5s

.logo
	display none
	opacity 0
	position relative
	margin 175px auto 90px auto
	max-width 600px
	width 90%
	@media (max-height: 750px)
		margin-top 150px
	@media (max-height: 690px)
		margin-top 125px
	@media (max-height: 635px)
		margin-top 100px
	@media (max-height: 600px)
		margin-top 75px
	@media (max-width: 500px)
		padding 0 20px


.landing-actions
	display none
	position relative
	width 100%
	margin 0 auto
	color $darkgrey
	text-align center
	button
		display inline-block

.headline
	position absolute
	z-index 100
	bottom -25px
	width 100%
	height auto
	margin 0
	text-align center
	font-family 'bebas-neue'
	font-size 95px
	font-weight 300
	color $white
	cursor pointer
	transition all 0.7s ease
	&.is-intro
		color $lightgrey
		bottom 45%
	@media (max-height: 400px)
		display none
	@media (max-width: 1170px)
		font-size 85px
		bottom -23px
	@media (max-width: 1060px)
		font-size 75px
		bottom -21px
	@media (max-width: 950px)
		font-size 65px
		bottom -19px
	@media (max-width: 840px)
		font-size 55px
		bottom -16px
	@media (max-width: 740px)
		font-size 45px
		bottom -12px
	@media (max-width: 550px)
		font-size 40px
		bottom -9px
	@media (max-width: 475px)
		font-size 35px
	@media (max-width: 415px)
		font-size 30px
		bottom -5px
	@media (max-width: 370px)
		font-size 25px
	@media (max-width: 310px)
		font-size 20px

.is-intro
	.background-overlay
		opacity 1
	.background
		top 0px
		left 0px
		right 0px
		bottom 0px
	.landing-actions
		display none

.footer
	background-color $darkgrey
	text-align center
	padding 70px 0 50px 0

.footer-wordmark
	display block
	max-width 90%
	margin 0 auto

.social-icons
	margin 50px auto
	text-align center
	a
		text-decoration none
	img
		margin 0 20px

.footer-email
	color $white
	font-size 1.7em
	font-family 'Fenix'
	text-decoration none
	transition color 0.5s
	&:hover
		color $lightgrey


